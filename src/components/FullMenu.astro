---
import { Image } from "astro:assets";
---

<header class="bg-dark w-screen h-16 fixed top-0 z-50 mb-3">
    <nav
        class="mx-auto flex justify-between items-center p-6 lg:px-8"
        aria-label="Global"
    >
        <!-- Logo o nombre del sitio -->
        <div class="text-lg font-semibold text-white flex items-center gap-2">
            <Image
                src="/logo-lobo.png"
                width="64"
                height="64"
                decoding="async"
                loading="lazy"
                alt="Logo Portafolio"
            />
        </div>

        <!-- Menú para pantallas grandes -->

        <!-- Botón de menú hamburguesa para pantallas pequeñas -->
        <button id="menuOs" class="menu text-white" onclick="menu()">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-6"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M3.75 5.25h16.5m-16.5 4.5h16.5m-16.5 4.5h16.5m-16.5 4.5h16.5"
                ></path>
            </svg>
        </button>
    </nav>
</header>

<nav id="fullscreen-menu" class="fullscreen-menu z-10" onclick="closeMenu()">
    <div>
        <ul class="menu">
            <li><a href="#my-hero">Sobre Mi</a></li>
            <li><a href="#experiencia">Experiencia</a></li>
            <li><a href="#academicos">Datos Académicos</a></li>
            <li><a href="#tecnologias">Conocimientos</a></li>
            <li><a href="#valores">Valores</a></li>
            <li><a href="#tecnologias">Intereses</a></li>
        </ul>
    </div>
</nav>
<style>
    .fullscreen-menu {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.9);
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        visibility: hidden;
        opacity: 0;
        transition:
            opacity 0.3s ease,
            visibility 0.3s ease;
    }

    .fullscreen-menu.active {
        visibility: visible;
        opacity: 1;
    }

    .fullscreen-menu ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .fullscreen-menu ul li {
        margin: 20px 0;
    }

    .fullscreen-menu ul li a {
        color: white;
        text-decoration: none;
        font-size: 2rem;
        transition: color 0.3s ease;
    }

    .fullscreen-menu ul li a:hover {
        color: #ff6347;
    }

    #menu-close {
        position: absolute;
        top: 20px;
        right: 20px;
        background: none;
        border: none;
        color: white;
        font-size: 1.5rem;
        cursor: pointer;
    }

    #menu-toggle {
        background: none;
        border: none;
        color: black;
        font-size: 1.5rem;
        cursor: pointer;
    }
</style>
<script is:inline>
    let isMenuOpen = false;

    const menuToggle = document.getElementById("menu-toggle");
    const menuOS = document.getElementById("menuOs");
    const fullscreenMenu = document.getElementById("fullscreen-menu");
    function menu() {
        isMenuOpen = !isMenuOpen;
        //fullscreenMenu.classList.add("active");
        fullscreenMenu.classList.toggle("active");
        if (isMenuOpen) {
            menuOS.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
            </svg>`;
        } else {
            menuOS.innerHTML = `<svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-6"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M3.75 5.25h16.5m-16.5 4.5h16.5m-16.5 4.5h16.5m-16.5 4.5h16.5"
                ></path>
            </svg>`;
        }
    }
    function closeMenu() {
        console.log("closed");
        fullscreenMenu.classList.remove("active");
        menuOS.innerHTML = `<svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-6"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M3.75 5.25h16.5m-16.5 4.5h16.5m-16.5 4.5h16.5m-16.5 4.5h16.5"
                ></path>
            </svg>`;
    }
</script>

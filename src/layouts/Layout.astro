---
import { startOfSecond } from "date-fns";
import Footer from "../components/Footer.astro";
import FullMenu from "../components/FullMenu.astro";
import "../styles/global.css";
import "../styles/stars.css";
import "animate.css";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/logo-lobo.png" />
		<meta name="generator" content={Astro.generator} />
		<title>Portfolio</title>
		<script is:inline>
			if (
				localStorage.theme === "dark" ||
				(!("theme" in localStorage) &&
					window.matchMedia("(prefers-color-scheme: dark)").matches)
			) {
				document.documentElement.classList.add("dark");
			} else {
				document.documentElement.classList.remove("dark");
			}
		</script>
	</head>
	<body
		class="min-h-screen bg-white text-black transition-colors duration-300 dark:bg-gray-900 dark:text-white"
	>
		<div class="stars"></div>
		<FullMenu />
		<slot />
		<Footer />
	</body>
</html>
<script is:inline>
	// Generar estrellas
	const starsContainer = document.querySelector(".stars");
	const starCount = Math.floor(
		(window.innerWidth * window.innerHeight) / 2500,
	); // Cantidad de estrellas basada en tama침o de pantalla

	for (let i = 0; i < starCount; i++) {
		const star = document.createElement("div");
		star.className = "star";

		// Posici칩n aleatoria
		const x = Math.floor(Math.random() * window.innerWidth);
		const y = Math.floor(Math.random() * window.innerHeight);

		// Tama침o aleatorio
		const size = Math.random() * 3;

		// Animaci칩n con retraso aleatorio
		const delay = Math.random() * 10;
		const duration = 3 + Math.random() * 4;

		star.style.width = `${size}px`;
		star.style.height = `${size}px`;
		star.style.left = `${x}px`;
		star.style.top = `${y}px`;
		star.style.animation = `twinkle ${duration}s ease-in-out ${delay}s infinite`;

		starsContainer.appendChild(star);
	}
</script>

---
import { Image } from "astro:assets";
import ImportantTitle from "../components/ImportantTitle.astro";
---

<section id="academicos" class="mx-auto text-center mt-3 dark:text-white">
    <ImportantTitle title="Datos Academicos" />
    <div id="hero" class="mx-auto text-center mt-3">
        <div class="academic-log text-center mx-auto">
            <a href="https://utp.ac.pa/">
                <Image
                    src="https://utp.ac.pa/logo_utp.jpg"
                    width="100"
                    height="100"
                    decoding="async"
                    loading="lazy"
                    alt="Logo Portafolio"
                />
            </a>
            <p class="text-white">Universidad Tecnológica de Panamá</p>
        </div>
        <div class="my-history info-academic mx-auto">
            <h3
                class="transition delay-150 duration-300 ease-in-out hover:-translate-y-1 hover:scale-100 text-xl"
            >
                Lic. en Ingeniería de Sistemas y Computación.
            </h3>
            <span class="text-black dark:text-white"> 2014 - 2020 </span>
        </div>
    </div>
</section>
<style>
    img {
        border-radius: 50%;
        margin: 0 auto;
    }
</style>
